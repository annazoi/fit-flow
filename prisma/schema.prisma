generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// npx prisma migrate dev 

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  password  String
  uuid String @unique @default(uuid())
  exercises Exercise[] 
  // calories String? @default("")
  created_at            DateTime     @default(now())
  updated_at            DateTime     @updatedAt
  @@index([uuid])
  @@map("users")
}

model Exercise {
  id      Int    @id @default(autoincrement())
  userId  Int
  user    User   @relation(fields: [userId], references: [id])
  // type    String? @default("")
  type    ExerciseType 
  @@map("exercises")
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String
  // exercises   Exercise[]
  @@map("categories")
}

enum ExerciseType {
  CHEST
  BACK
  SHOULDERS
  ARMS
  LEGS
  CORE
}
